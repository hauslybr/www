---
const stats = [
  { value: '20s', label: 'para cadastrar um lead' },
  { value: '0', label: 'leads sem próxima ação' },
  { value: '100%', label: 'da semana planejada' },
];
---

<section class="social-proof reveal">
  <div class="container social-proof__inner">
    <p class="social-proof__label">Validado com corretores autônomos em Goiânia</p>
    <div class="social-proof__stats">
      {stats.map((stat, i) => (
        <div class={`social-proof__stat reveal reveal-delay-${i + 1}`}>
          <span class="social-proof__value">{stat.value}</span>
          <span class="social-proof__desc">{stat.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .social-proof {
    background: var(--surface-warm);
    border-top: 1px solid var(--border-warm);
    border-bottom: 1px solid var(--border-warm);
    padding: var(--space-xl) 0;
  }

  .social-proof__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-lg);
  }

  .social-proof__label {
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .social-proof__stats {
    display: flex;
    gap: var(--space-2xl);
    align-items: center;
  }

  .social-proof__stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    text-align: center;
  }

  .social-proof__value {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    color: var(--amber);
    line-height: 1;
  }

  .social-proof__desc {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-secondary);
    max-width: 160px;
  }

  @media (max-width: 768px) {
    .social-proof__stats {
      flex-direction: column;
      gap: var(--space-lg);
    }
  }
</style>
