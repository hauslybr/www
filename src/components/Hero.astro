<style>
  .hero {
    position: relative;
    padding: 100px 0 120px;
    overflow: hidden;
    background: linear-gradient(to bottom, var(--surface) 0%, var(--surface-warm) 100%);
  }

  .hero__bg-shapes {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .hero__orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.6;
    animation: drift 20s ease-in-out infinite alternate;
  }

  .hero__orb--amber {
    width: 600px;
    height: 600px;
    top: -200px;
    right: -100px;
    background: radial-gradient(circle, rgba(221, 148, 41, 0.15) 0%, transparent 70%);
  }

  .hero__orb--blue {
    width: 500px;
    height: 500px;
    bottom: -150px;
    left: -100px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
  }

  @keyframes drift {
    0% { transform: translate(0, 0) scale(1); }
    100% { transform: translate(-30px, 40px) scale(1.05); }
  }

  .hero__grid {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1.1fr 0.9fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .hero__badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 18px 8px 12px;
    background: var(--amber-glow);
    border: 1px solid rgba(221, 148, 41, 0.3);
    border-radius: var(--radius-full);
    font-size: 13px;
    font-weight: 700;
    color: var(--amber);
    letter-spacing: 0.02em;
    text-transform: uppercase;
    margin-bottom: var(--space-lg);
    width: fit-content;
    box-shadow: var(--shadow-glow);
  }

  .hero__badge-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--amber);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); box-shadow: 0 0 0 0 rgba(221, 148, 41, 0.4); }
    50% { opacity: 0.8; transform: scale(1.2); box-shadow: 0 0 0 8px rgba(221, 148, 41, 0); }
  }

  .hero__title {
    line-height: 1.05;
    letter-spacing: -0.04em;
    color: var(--text-primary);
  }

  .hero__title-accent {
    color: var(--red-500);
    font-style: italic;
    /** Adding a subtle text shadow to make it pop */
    text-shadow: 0 4px 24px var(--red-glow);
  }

  .hero__subtitle {
    margin-top: var(--space-lg);
    font-size: clamp(1.1rem, 1.8vw, 1.25rem);
    line-height: 1.6;
    color: var(--text-secondary);
    max-width: 580px;
  }

  .hero__subtitle strong {
    color: var(--text-primary);
    display: block;
    margin-top: var(--space-sm);
  }

  .hero__cta {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-xl);
    align-items: center;
  }

  .btn--large {
    padding: 16px 32px;
    font-size: 16px;
  }

  .hero__stores {
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border);
  }

  .hero__coming {
    font-size: 14px;
    font-weight: 700;
    color: var(--amber);
    margin-bottom: var(--space-sm);
  }

  .hero__store-badges {
    display: flex;
    gap: 12px;
  }

  .hero__store-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    background: var(--navy-900);
    color: var(--white);
    border-radius: var(--radius-md);
    font-size: 13px;
    font-weight: 600;
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .hero__store-badge:hover {
    transform: translateY(-2px);
  }

  .hero__social-proof {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: var(--space-lg);
  }

  .avatars {
    display: flex;
    align-items: center;
  }

  .avatars img {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 3px solid var(--surface);
    margin-left: -12px;
    object-fit: cover;
  }

  .avatars img:first-child {
    margin-left: 0;
  }

  .avatar-count {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 3px solid var(--surface);
    margin-left: -12px;
    background: var(--navy-800);
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: 700;
    z-index: 1;
  }

  .hero__social-proof p {
    font-size: 13px;
    font-weight: 600;
    color: var(--text-secondary);
  }

  /* Hero image */
  .hero__image {
    display: flex;
    justify-content: center;
    position: relative;
  }

  .hero__image-frame {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow:
      var(--shadow-lg),
      0 32px 64px rgba(10, 15, 29, 0.15);
    transform: perspective(1000px) rotateY(-5deg) rotateX(2deg);
    transition: transform 0.6s var(--ease-out);
  }

  .hero__image-frame:hover {
     transform: perspective(1000px) rotateY(0deg) rotateX(0deg);
  }

  .hero__image-frame img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .hero__image-overlay {
     position: absolute;
     inset: 0;
     display: flex;
     align-items: flex-end;
     justify-content: flex-start;
     padding: var(--space-xl);
     pointer-events: none;
  }

  .hero__floating-card {
     background: rgba(255, 255, 255, 0.85);
     backdrop-filter: blur(12px);
     padding: 16px 20px;
     border-radius: var(--radius-lg);
     display: flex;
     align-items: center;
     gap: 16px;
     box-shadow: var(--shadow-lg);
     border: 1px solid rgba(255, 255, 255, 0.5);
     animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
     0% { transform: translateY(0px); }
     50% { transform: translateY(-10px); }
     100% { transform: translateY(0px); }
  }

  .hero__floating-card .icon {
     font-size: 24px;
  }

  .hero__floating-card .card-text strong {
     display: block;
     font-size: 14px;
     color: var(--text-primary);
     font-family: var(--font-body);
  }
  
  .hero__floating-card .card-text span {
     display: block;
     font-size: 12px;
     color: var(--text-secondary);
  }

  .hero__image-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(253, 252, 251, 0.3) 0%,
      transparent 30%
    );
    pointer-events: none;
  }

  @media (max-width: 1024px) {
    .hero__grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .hero__content {
       text-align: center;
       display: flex;
       flex-direction: column;
       align-items: center;
    }

    .hero__subtitle {
       text-align: center;
    }

    .hero__image-frame {
       transform: none;
    }

    .hero__floating-card {
       padding: 12px 16px;
       bottom: 24px;
       left: 24px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 64px 0 80px;
    }

    .hero__cta {
       flex-direction: column;
       width: 100%;
    }

    .hero__cta .btn {
       width: 100%;
    }
    
    .hero__stores {
       display: flex;
       flex-direction: column;
       align-items: center;
    }
  }
</style>
